<Window x:Class="AnimatedSigns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimatedSigns"
        mc:Ignorable="d"
        Title="Animated Signs" MinHeight="387" Height="387" MinWidth="314" Width="314">
    <Grid>
        <Label x:Name="label" Content="Select frames (GIF supported):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>
        <Button x:Name="btnBrowse" Content="Browse..." Margin="180,3,0,0" VerticalAlignment="Top" Click="btnBrowse_Click" HorizontalAlignment="Left" Width="87"/>
        <TextBox x:Name="tbxFiles" Margin="10,52,10,135" Text="" AcceptsReturn="True" AllowDrop="True" PreviewDragOver="textBox_PreviewDragOver" Drop="textBox_Drop" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="btnCreate" Content="Create and Copy" Margin="10,0,10,33" VerticalAlignment="Bottom" Click="btnCopy_Click" Height="32"/>
        <Button x:Name="btnExport" Content="Create and Export" Margin="10,0,10,70" VerticalAlignment="Bottom" Click="btnExport_Click" Height="32"/>
        <Label x:Name="lblMissing" Content="Missing or invalid files will be ignored." Margin="10,26,18,0" VerticalAlignment="Top"/>


        <ProgressBar x:Name="progress" Height="18" Margin="10,0,10,10" VerticalAlignment="Bottom"/>

        <TextBox x:Name="tbxFPS" HorizontalAlignment="Left" Height="24" Margin="47,0,0,106" TextWrapping="Wrap" Text="12" VerticalAlignment="Bottom" Width="53"/>
        <Label x:Name="lblFPS" Content="FPS:" HorizontalAlignment="Left" Margin="10,0,0,104" VerticalAlignment="Bottom"/>
        <Label x:Name="lblID" Content="Start ID at 0:" HorizontalAlignment="Left" Margin="100,0,0,104" VerticalAlignment="Bottom"/>
        <CheckBox x:Name="chkID" Content="" HorizontalAlignment="Left" Margin="173,0,0,109" VerticalAlignment="Bottom"/>
        <TextBox x:Name="tbxLight" HorizontalAlignment="Left" Height="24" Margin="235,0,-3,106" TextWrapping="Wrap" Text="FFFFFF" VerticalAlignment="Bottom" Width="53"/>
        <Label x:Name="lblLight" Content="Light:" HorizontalAlignment="Left" Margin="198,0,0,104" VerticalAlignment="Bottom"/>
    </Grid>
</Window>

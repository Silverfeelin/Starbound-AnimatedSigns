<Window x:Class="AnimatedSigns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimatedSigns"
        mc:Ignorable="d"
        Title="Animated Signs" Height="120.541" Width="261.558">
    <Grid>
        <Label x:Name="label" Content="Select one GIF or all frames:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        
        <Label x:Name="lblSort" Content="Individual frame files will be sorted by name." HorizontalAlignment="Left" Margin="0,16,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxFPS" HorizontalAlignment="Left" Height="24" Margin="37,49,0,0" TextWrapping="Wrap" Text="12" VerticalAlignment="Top" Width="53"/>
        <Label x:Name="lblFPS" Content="FPS:" HorizontalAlignment="Left" Margin="0,47,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblID" Content="Start ID at 0:" HorizontalAlignment="Left" Margin="97,47,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkID" Content="" HorizontalAlignment="Left" Margin="172,53,0,0" VerticalAlignment="Top"/>

        <Button x:Name="button" Content="Browse..." HorizontalAlignment="Left" Margin="157,3,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
    </Grid>
</Window>
